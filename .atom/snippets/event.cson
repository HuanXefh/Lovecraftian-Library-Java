'.source.js':

  'Core.post':
    prefix: 'lc_post'
    body: '''
    Core.app.post(() => {
      ${1:}
    });
    '''

  'Time.run':
    prefix: 'lc_timed'
    body: '''
    Time.run(${1:delay}, () => {
      ${2:}
    });
    '''

  'on init':
    prefix: 'lc_oninit'
    body: '''
