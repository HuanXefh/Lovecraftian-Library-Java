      ${1:}
    });
    '''

  'on load post':
    prefix: 'lc_onloadpost'
    body: '''
    MDL_event._c_onLoad(() => {
      Core.app.post(() => {
        ${1:}
      });
    });
    '''

  'on load delay':
    prefix: 'lc_onloadtimed'
